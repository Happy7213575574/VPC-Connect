<?xml version="1.0" encoding="utf-8"?>
<MasterDetailPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ConnectApp.Pages.MainPage"
    xmlns:local="clr-namespace:ConnectApp.Extensions"
    xmlns:pages="clr-namespace:ConnectApp.Pages">
    <MasterDetailPage.Master>
        <pages:MainMasterPage x:Name="MasterPage" />
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage
            IconImageSource="{local:ImageResource ConnectApp.Images.hamburger-white.png}">
            <x:Arguments>
                <pages:MainDetailPage />
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>
