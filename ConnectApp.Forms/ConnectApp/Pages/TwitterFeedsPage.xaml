<?xml version="1.0" encoding="utf-8"?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ConnectApp.Pages.TwitterFeedsPage"
    xmlns:local="clr-namespace:ConnectApp.Extensions"
    Title="VPC news feeds">

    <ContentPage Title="National VPC">
        <WebView
            Source="{local:WebResource ConnectApp.Pages.HTML.NationalFeedPage.html}"
            Navigating="WebView_NavigatingAsync"
            />
    </ContentPage>

    <ContentPage Title="All Cadets">
        <WebView
            Source="{local:WebResource ConnectApp.Pages.HTML.AllFeedPage.html}"
            Navigating="WebView_NavigatingAsync"
            />
    </ContentPage>

    <ContentPage Title="Mini Police">
        <WebView
            Source="{local:WebResource ConnectApp.Pages.HTML.MiniFeedPage.html}"
            Navigating="WebView_NavigatingAsync"
            />
    </ContentPage>

</TabbedPage>
